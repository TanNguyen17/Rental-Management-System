<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.yourcompany.rentalmanagement.view.ViewRentalPropertiesController"
      styleClass="main-container">
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" styleClass="header-container">
        <Label text="My Properties" styleClass="header-text"/>
        <Region HBox.hgrow="ALWAYS"/>
        <MFXButton fx:id="addPropertyButton" 
                   text="+ Add New Property" 
                   onAction="#handleAddProperty"
                   styleClass="primary-button"/>
        <Label fx:id="messageLabel"/>
    </HBox>
    
    <!-- Add this before the propertyListContainer -->
    <HBox spacing="10" styleClass="filter-container">
        <ComboBox fx:id="ownerFilterCombo" promptText="Filter by Owner" />
        <ComboBox fx:id="propertyTypeFilterCombo" promptText="Filter by Type" />
    </HBox>
    
    <!-- Scrollable Property List -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="property-scroll">
        <VBox fx:id="propertyListContainer" styleClass="property-container"/>
    </ScrollPane>
</VBox> 