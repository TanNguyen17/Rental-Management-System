<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.yourcompany.rentalmanagement.view.PropertyDetailsController"
      spacing="15" style="-fx-padding: 20;">
    
    <ImageView fx:id="propertyImage" fitHeight="300" fitWidth="400" preserveRatio="true"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="titleLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="priceLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Host:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="hostLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextArea fx:id="descriptionArea" editable="false" wrapText="true" 
                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <VBox fx:id="addressBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <!-- Property specific details will be added dynamically -->
        <VBox fx:id="specificDetailsBox" GridPane.columnSpan="2" GridPane.rowIndex="6"/>
    </GridPane> 
</VBox> 