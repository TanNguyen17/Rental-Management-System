<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.yourcompany.rentalmanagement.view.PropertyDetailsController"
      styleClass="details-container" spacing="20" prefWidth="600" prefHeight="800">
    
    <ImageView fx:id="propertyImage" fitWidth="600" fitHeight="300" preserveRatio="true"/>
    
    <VBox fx:id="contentContainer" styleClass="content-container" spacing="15">
        <Label fx:id="titleLabel" styleClass="details-title"/>
        <!-- Type label will be inserted here programmatically -->
        <Label fx:id="priceLabel" styleClass="details-price"/>
        <Label fx:id="descriptionLabel" styleClass="details-description"/>
        
        <VBox styleClass="details-section" spacing="10">
            <Label text="Property Details" styleClass="section-title"/>
            <FlowPane fx:id="featuresContainer" styleClass="features-container"/>
        </VBox>
        
        <VBox styleClass="details-section" spacing="10">
            <Label text="Location" styleClass="section-title"/>
            <GridPane fx:id="addressGrid" vgap="5" hgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </VBox>
        
        <VBox styleClass="details-section" spacing="10">
            <Label text="Hosting Information" styleClass="section-title"/>
            <VBox fx:id="hostContainer" spacing="5"/>
        </VBox>
    </VBox>
    
</VBox> 