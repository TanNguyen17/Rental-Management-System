<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.yourcompany.rentalmanagement.view.ViewRentalPropertiesController"
      spacing="20" style="-fx-padding: 20;">
    
    <!-- Header with Add Property Button -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button fx:id="addPropertyButton" 
                text="Add New Property" 
                onAction="#handleAddProperty"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"/>
    </HBox>
    
    <!-- Placeholder for property list (will implement later) -->
    <VBox style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <VBox fx:id="propertyListContainer" spacing="10"/>
    </VBox>
</VBox> 